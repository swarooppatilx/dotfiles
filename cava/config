[general]
; autosens = 1               # auto-adjust sensitivity
; sensitivity = 100         # initial sens (100% = neutral)
; framerate = 60            # cap FPS so itâ€™s not too wild

; bars = 0                  # 0 = auto-fill your terminal width
; bar_width = 1             # skinny bars
; bar_spacing = 0           # zero gaps for that continuous vibe

[input]
; method = pulse            # or your favorite: alsa, pipewire, etc.
; source = auto

[output]
method = noncurses          # terminal-only, no extra window
orientation = bottom        # bars grow upward
channels = stereo           # mirrored bass in the middle
waveform = 0                # spectrum, not waveform
xaxis = none                # clean canvas
show_idle_bar_heads = 0     # no idle ticks
synchronized_sync = 1       # smoother redraw on modern emulators

[color]
